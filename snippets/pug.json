{
	"Pug HTML5 Document": {
		"prefix": "pughtml5",
		"body": [
			"doctype html",
			"html(lang=\"${1:en}\")",
			"\thead",
			"\t\tmeta(charset=\"UTF-8\")",
			"\t\tmeta(name=\"viewport\" content=\"width=device-width, initial-scale=1.0\")",
			"\t\tmeta(name=\"description\" content=\"${2:Page description}\")",
			"\t\ttitle ${3:Page Title}",
			"\tbody",
			"\t\t${0}"
		],
		"description": "Pug HTML5 document structure"
	},
	"Pug Semantic Header": {
		"prefix": "pugheader",
		"body": [
			"header",
			"\tnav",
			"\t\t${0}"
		],
		"description": "Pug semantic header with nav"
	},
	"Pug Semantic Main": {
		"prefix": "pugmain",
		"body": [
			"main",
			"\t${0}"
		],
		"description": "Pug semantic main content"
	},
	"Pug Semantic Footer": {
		"prefix": "pugfooter",
		"body": [
			"footer",
			"\t${0}"
		],
		"description": "Pug semantic footer"
	},
	"Pug Semantic Article": {
		"prefix": "pugarticle",
		"body": [
			"article",
			"\theader",
			"\t\th1 ${1:Article Title}",
			"\tsection",
			"\t\t${0}"
		],
		"description": "Pug semantic article"
	},
	"Pug Semantic Section": {
		"prefix": "pugsection",
		"body": [
			"section",
			"\th2 ${1:Section Title}",
			"\t${0}"
		],
		"description": "Pug semantic section"
	},
	"Pug Accessible Form": {
		"prefix": "pugform",
		"body": [
			"form(action=\"${1:#}\" method=\"${2:post}\" novalidate)",
			"\tfieldset",
			"\t\tlegend ${3:Form Title}",
			"\t\tdiv",
			"\t\t\tlabel(for=\"${4:inputId}\") ${5:Label}",
			"\t\t\tinput(type=\"${6:text}\" id=\"${4:inputId}\" name=\"${4:inputId}\" required aria-describedby=\"${4:inputId}-error\")",
			"\t\t\tspan(id=\"${4:inputId}-error\" class=\"error\" role=\"alert\")",
			"\t\tbutton(type=\"submit\") ${7:Submit}"
		],
		"description": "Pug accessible form"
	},
	"Pug Accessible Button": {
		"prefix": "pugbutton",
		"body": [
			"button(type=\"${1:button}\" aria-label=\"${2:Button description}\") ${3:Button Text}"
		],
		"description": "Pug accessible button"
	},
	"Pug Accessible Link": {
		"prefix": "puglink",
		"body": [
			"a(href=\"${1:#}\" aria-label=\"${2:Link description}\") ${3:Link Text}"
		],
		"description": "Pug accessible link"
	},
	"Pug Accessible Image": {
		"prefix": "pugimg",
		"body": [
			"img(src=\"${1:image.jpg}\" alt=\"${2:Image description}\" loading=\"${3:lazy}\" width=\"${4:800}\" height=\"${5:600}\")"
		],
		"description": "Pug accessible image"
	},
	"Pug Accessible Table": {
		"prefix": "pugtable",
		"body": [
			"table",
			"\tcaption ${1:Table caption}",
			"\tthead",
			"\t\ttr",
			"\t\t\tth(scope=\"col\") ${2:Header 1}",
			"\t\t\tth(scope=\"col\") ${3:Header 2}",
			"\ttbody",
			"\t\ttr",
			"\t\t\tth(scope=\"row\") ${4:Row Header}",
			"\t\t\ttd ${5:Data}"
		],
		"description": "Pug accessible table"
	},
	"Pug Card Component": {
		"prefix": "pugcard",
		"body": [
			".card",
			"\t.card-header",
			"\t\th3 ${1:Card Title}",
			"\t.card-body",
			"\t\tp ${2:Card content}",
			"\t\tbutton.btn ${3:Action}"
		],
		"description": "Pug card component"
	},
	"Pug Navigation": {
		"prefix": "pugnav",
		"body": [
			"nav",
			"\tul",
			"\t\tli",
			"\t\t\ta(href=\"${1:#}\") ${2:Home}",
			"\t\tli",
			"\t\t\ta(href=\"${3:#}\") ${4:About}",
			"\t\tli",
			"\t\t\ta(href=\"${5:#}\") ${6:Contact}"
		],
		"description": "Pug navigation menu"
	},
	"Pug List": {
		"prefix": "puglist",
		"body": [
			"ul",
			"\tli ${1:Item 1}",
			"\tli ${2:Item 2}",
			"\tli ${3:Item 3}"
		],
		"description": "Pug unordered list"
	},
	"Pug Ordered List": {
		"prefix": "pugol",
		"body": [
			"ol",
			"\tli ${1:Item 1}",
			"\tli ${2:Item 2}",
			"\tli ${3:Item 3}"
		],
		"description": "Pug ordered list"
	},
	"Pug Div with Class": {
		"prefix": "pugdiv",
		"body": [
			"div.${1:className}",
			"\t${0}"
		],
		"description": "Pug div with class"
	},
	"Pug Div with ID": {
		"prefix": "pugdiv-id",
		"body": [
			"div#${1:idName}",
			"\t${0}"
		],
		"description": "Pug div with ID"
	},
	"Pug Input": {
		"prefix": "puginput",
		"body": [
			"input(type=\"${1:text}\" id=\"${2:inputId}\" name=\"${2:inputId}\" placeholder=\"${3:Placeholder}\")"
		],
		"description": "Pug input field"
	},
	"Pug Textarea": {
		"prefix": "pugtextarea",
		"body": [
			"textarea(id=\"${1:textareaId}\" name=\"${1:textareaId}\" rows=\"${2:4}\" placeholder=\"${3:Placeholder}\")"
		],
		"description": "Pug textarea"
	},
	"Pug Select": {
		"prefix": "pugselect",
		"body": [
			"select(id=\"${1:selectId}\" name=\"${1:selectId}\")",
			"\toption(value=\"\") ${2:Choose...}",
			"\toption(value=\"${3:1}\") ${4:Option 1}",
			"\toption(value=\"${5:2}\") ${6:Option 2}"
		],
		"description": "Pug select dropdown"
	},
	"Pug Mixin": {
		"prefix": "pugmixin",
		"body": [
			"mixin ${1:mixinName}(${2:param})",
			"\t${0}"
		],
		"description": "Pug mixin definition"
	},
	"Pug Mixin Call": {
		"prefix": "pugmixin-call",
		"body": [
			"+${1:mixinName}(${2:arg})"
		],
		"description": "Pug mixin call"
	},
	"Pug Include": {
		"prefix": "puginclude",
		"body": [
			"include ${1:path/to/file}"
		],
		"description": "Pug include statement"
	},
	"Pug Extends": {
		"prefix": "pugextends",
		"body": [
			"extends ${1:layout}",
			"",
			"block ${2:content}",
			"\t${0}"
		],
		"description": "Pug extends layout"
	},
	"Pug Block": {
		"prefix": "pugblock",
		"body": [
			"block ${1:blockName}",
			"\t${0}"
		],
		"description": "Pug block definition"
	},
	"Pug Conditional": {
		"prefix": "pugif",
		"body": [
			"if ${1:condition}",
			"\t${0}",
			"else",
			"\t${2}"
		],
		"description": "Pug conditional statement"
	},
	"Pug Each Loop": {
		"prefix": "pugeach",
		"body": [
			"each ${1:item} in ${2:items}",
			"\t${0}"
		],
		"description": "Pug each loop"
	},
	"Pug While Loop": {
		"prefix": "pugwhile",
		"body": [
			"while ${1:condition}",
			"\t${0}"
		],
		"description": "Pug while loop"
	},
	"Pug Case Statement": {
		"prefix": "pugcase",
		"body": [
			"case ${1:value}",
			"\twhen ${2:'option1'}",
			"\t\t${3}",
			"\twhen ${4:'option2'}",
			"\t\t${5}",
			"\tdefault",
			"\t\t${6}"
		],
		"description": "Pug case statement"
	}
}
